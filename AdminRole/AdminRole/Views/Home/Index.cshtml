@using System.Activities.Statements
@using System.Web.UI.WebControls
@model AdminRole.Models.Users

<body>

    <div class="container top">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                @if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Any())
                {               
                    <p class="alert alert-danger alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>Napačno geslo ali uporabniško ime! Preveri prijavne podatke!</p>
                }
            </div>
        </div>
    </div>


    <div class="container">

        @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-signin"}))
        {
            
            <div class="form-signin" role="form">
                <div class="text-center"><img src="~/Content/images/logo.png" class="logo" alt=""></div>
                <h4 class="form-signin-heading">Prijava v Message Viewer</h4>
                <div class="row"></div>
                @Html.TextBoxFor(u => u.Username, new {placeholder="Uporabniško ime", @class="form-control username"}) 
                @Html.ValidationMessageFor(u => u.Username, null, new {@class="help-block pull-right"})        
                @Html.PasswordFor(u => u.Password, new {placeholder="Geslo", @class="form-control password"}) 
                @Html.ValidationMessageFor(u => u.Password, null, new {@class="help-block pull-right poravnava-error-geslo"})   
                <button class="btn btn-lg btn-primary btn-block" type="submit">Prijava</button>
            </div>
                                          
            <div class="row">
		
                <div class="col-md-12 text-center">
                    &copy; Actual I.T., d.d. 
                </div>
		
            </div>
               
        }

    </div>


    <!-- /container -->

    <!-- Bootstrap core JavaScript
        ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
</body>
