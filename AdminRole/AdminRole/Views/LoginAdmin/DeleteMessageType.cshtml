@model AdminRole.Models.KraticeTable
@{
    ViewBag.Title = "Message Viewer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

        <div class="container top">

		<div class="row">
			<div class="col-md-8 col-md-offset-2">			  
				<div class="page-header"><h2>Izbriši opis</h2></div>
				
				<div role="form" class="delete-users">
					<p class="alert alert-danger alert-dismissible" role="alert"><button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>Ali ste prepričani, da želite izbrisati ta opis?</p>
				  <div class="form-group">
				      <label for="us">ID</label>
                      @Html.TextBoxFor(model => model.Id_K, new {@class="form-control", id="us", placeholder="", disabled = "disabled", @readonly = "readonly"})
				  </div>
				  <div class="form-group">
				      <label for="us2">Sporočilo</label>
                      @Html.TextBoxFor(model => model.Kratica, new {@class="form-control", id="us2", placeholder="", disabled = "disabled", @readonly = "readonly"})
				  </div>
				    <div class="form-group">
				        <label for="us3">Slovenski opis: </label>
				        @Html.TextBoxFor(model => model.OpisSlo, new {@class="form-control", id="us3", placeholder="", disabled = "disabled", @readonly = "readonly"})
				    </div>
				    <div class="form-group">
				        <label for="us3">Angleški opis: </label>
				        @Html.TextBoxFor(model => model.OpisAng, new {@class="form-control", id="us3", placeholder="", disabled = "disabled", @readonly = "readonly"})
				    </div>

				  <div class="clearfix"></div><br />
                    
                    <input class="btn btn-default pull-left btn-danger" type="submit" value="Izbriši"/>
				    <input class="btn btn-default pull-right btn-primary" type="button" value="Nazaj" onclick="RedirectToDelete()"/>

				</div>
				
			</div>
		</div>
		
		<div class="row">
		
			<div class="col-md-12">
				<hr />
				&copy; Actual I.T., d.d. 
			</div>
			
		</div>
		
        </div><!-- /.container -->
}

<script type="text/javascript">
    function RedirectToDelete() {
        var url = "@Url.Action("KraticeView")";
        location.href = url;
    }
</script>
