@model AdminRole.Models.CustomerType
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()  

        <div class="container top">

		<div class="row">
			<div class="col-md-8 col-md-offset-2">			  
				<div class="page-header"><h2>Ustvari novo stranko</h2></div>
				
			    <div role="form" class="delete-users">
                <label class="control-label" for="us">Stranka</label>
                <div class="input-group">
                    @Html.HiddenFor(model => model.IdNewType)
                    @Html.TextBoxFor(u => u.CustomType, new { @class = "form-control", id = "us", placeholder = "Na primer: MASP, TWAY, itd..." })

                    <div class="input-group-addon">*</div>
                </div>

			        <div class="form-group">
			            @Html.ValidationMessageFor(u => u.CustomType, null, new { @class = "help-block pull-left"})
			        </div>
                    
			        <div class="clearfix"></div>
                <br />
                <input class="btn btn-default pull-left btn-success" type="submit" value="Ustvari stranko" />
                <input class="btn btn-default pull-right btn-primary" type="button" value="Nazaj" onclick="Redirect()" />
                <script type="text/javascript">
                    function Redirect() {
                        var url = "@Url.Action("CustomerTypeView")";
        			        location.href = url;
        			    }
                </script>
            </div>				
			</div>
		</div>
		
		<div class="row">
		
			<div class="col-md-12">
				<hr />
				&copy; Actual I.T., d.d. 
			</div>
			
		</div>
		
        </div><!-- /.container -->
}

