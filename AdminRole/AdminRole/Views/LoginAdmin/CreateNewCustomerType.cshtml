@model AdminRole.Models.CustomerType
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

        <div class="container top">

		<div class="row">
			<div class="col-md-8 col-md-offset-2">			  
				<div class="page-header"><h2>Create New Customer Type</h2></div>
				
				<div role="form" class="delete-users">
				   <div class="form-group has-error">
					  <label class="control-label" for="inputError1">Customer Type</label>
				       <div class="input-group">
                            @Html.TextBoxFor(u => u.CustomType, new {@class="form-control", id="inputError1"})
                            @Html.HiddenFor(model => model.IdNewType)
				           <div class="input-group-addon">*</div>
				       </div>
					</div>
					
				    <div class="form-group">
				        <p class="bs-callout-danger">@Html.ValidationMessageFor(u => u.CustomType)</p>
				    </div>
				    <div class="clearfix"></div><br />
                    <input class="btn btn-default pull-left btn-success" type="submit" value="Create New Customer Type"/>
				    <input class="btn btn-default pull-right btn-primary" type="button" value="Back to Edit Menu" onclick="Redirect()"/>
				    <script type="text/javascript">
    				    function Redirect() {
    				        var url = "@Url.Action("CustomerTypeView")";
    				        location.href = url;
    				    }
    				</script>
				</div>				
			</div>
		</div>
		
		<div class="row">
		
			<div class="col-md-12">
				<hr />
				&copy; Actual I.T., d.d. 
			</div>
			
		</div>
		
        </div><!-- /.container -->
}

