@model AdminRole.Models.UsersTable

@{
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()

    <div class="container top">

        <div class="row">
            <div class="col-md-8 col-md-offset-2">			  
                <div class="page-header"><h2>User to delete</h2></div>
				
                <div role="form" class="delete-users">
                    <p class="alert alert-danger alert-dismissible" role="alert"><button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>Are you sure you want to delete this user?</p>
                    <div class="form-group">
                        <label for="us">User ID</label>
                        @Html.TextBoxFor(model => model.userID, new {disabled = "disabled", @readonly = "readonly", @class="form-control", id="us", placeholder=""})
                    </div>
                    <div class="form-group">
                        <label for="us2">Username</label>
                        @Html.TextBoxFor(model => model.username, new {disabled = "disabled", @readonly = "readonly", @class="form-control", id="us", placeholder=""})
                    </div>
                    <div class="form-group">
                        <label for="us3">Time Zone</label>
                        @Html.TextBoxFor(model => model.TimeZoneId, new {disabled = "disabled", @readonly = "readonly", @class="form-control", id="us", placeholder=""})
                    </div>
                    <div class="form-group">
                        <label for="us3">User Role</label>
                        @Html.TextBoxFor(model => model.Roles, new {disabled = "disabled", @readonly = "readonly", @class="form-control", id="us", placeholder=""})
                    </div>

                    @Html.HiddenFor(model => model.password)
                    @Html.HiddenFor(model => model.passwordSalt)
                    @Html.HiddenFor(model => model.Roles)

                    <div class="clearfix"></div>
                    <div class="form-group">
                        <p class="warning bg-warning"><strong>Note!</strong> By deleting user, you will also delete Customers for this user!</p>
                    </div>
                    <div class="clearfix"></div><br />
                    <input type="submit" class="btn btn-default pull-left btn-danger" name="action" value="Delete">
				    <input type="button" class="btn btn-default pull-right btn-primary" onclick="RedirectToEdit()" value="Back to Edit Men">
				    <script type="text/javascript">
    				    function RedirectToEdit() {
    				        var url = "@Url.Action("Registracija")";
    				        location.href = url;
    				    }
    				</script>

                </div>
				
            </div>
        </div>
		
        <div class="row">
		
            <div class="col-md-12">
                <hr />
                &copy; Actual I.T., d.d. 
            </div>
			
        </div>
		
    </div>
    <!-- /.container -->

}

    <script type="text/javascript">
        function Redirect() {
            var url = "@Url.Action("Registracija")";
            location.href = url;
        }
    </script>