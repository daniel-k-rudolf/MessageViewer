@model AdminRole.Models.CustomType
@{
    ViewBag.Title = "Message Viewer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="prijavno-okno_delete">
        <h3 class="deleteMessage">Are you sure you whant to delete this customer type?</h3>
        <fieldset>
            <legend>Destination Type to delete</legend>
            <label>ID</label>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Id_NewCustomerType, new {disabled = "disabled", @readonly = "readonly"})
            </div>
            <label>Destination</label>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.CustomerType, new {disabled = "disabled", @readonly = "readonly"})
            </div>
            <p>
                <input class="gumb_delete" type="submit" value="Delete Customer Type"/>
                <input class="gumb_back_to-edit2" type="button" value="Back to Customers" onclick="RedirectToDelete()"/>
            </p>
        </fieldset>
        
    </div>
}

<div>   
    <script type="text/javascript">
        function RedirectToDelete() {
            var url = "@Url.Action("CustomerTypeView")";
            location.href = url;
        }
    </script>
</div>
